{
  "name": "react-line-clamp-animated",
  "description": "A lightweight and zero-dependency React functional component for animating text truncation with line clamping",
  "private": false,
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": {
    "name": "Yuriy Rybchynski",
    "email": "yuriyrybchynski.dev@gmail.com"
  },
  "keywords": [
    "react",
    "react line clamp",
    "line clamp",
    "line clamp animated",
    "read more animated",
    "read-more",
    "read more block",
    "clamp",
    "dotdotdot",
    "multiline"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ./tsconfig.lib.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,lib}/**/*.{js,ts,jsx,tsx,css}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/lib/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "glob": "^11.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.4.0"
  }
}
